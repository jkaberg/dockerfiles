# Fail2ban jail configuration
# Generated by mail-forwarder

[DEFAULT]
# Ban hosts for {{ ban_time }} seconds ({{ ban_time // 60 }} minutes)
bantime = {{ ban_time }}

# Find time window is {{ find_time }} seconds ({{ find_time // 60 }} minutes)
findtime = {{ find_time }}

# Ban after {{ max_attempts }} attempts
maxretry = {{ max_attempts }}

# Destination email for notifications (if enabled)
destemail = root@localhost

# Default ban action
banaction = iptables-multiport

# Default protocol
protocol = tcp

# Default chain
chain = INPUT

# Default action
action = %(action_)s

# Ignore localhost
ignoreip = 127.0.0.1/8 ::1

# Explicitly disable sshd jail (we don't need SSH monitoring in this container)
[sshd]
enabled = false 